<Window x:Class="ECUFlasher.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About NefMotoECUFlasher"
        Height="230"
        Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="NefMotoECUFlasher"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,5"/>

        <TextBlock Grid.Row="1"
                   Text="{Binding FullVersion}"
                   FontSize="14"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" HorizontalAlignment="Left" Margin="0,0,0,5">
            <Hyperlink NavigateUri="https://github.com/NefMoto/NefMotoOpenSource/releases" RequestNavigate="Hyperlink_RequestNavigate">
                NefMotoECUFlasher Releases at GitHub
            </Hyperlink>
        </TextBlock>

        <TextBlock Grid.Row="3" HorizontalAlignment="Left" Margin="0,0,0,15">
            <Hyperlink NavigateUri="http://www.nefariousmotorsports.com/" RequestNavigate="Hyperlink_RequestNavigate">
                Visit NefMoto.com
            </Hyperlink>
        </TextBlock>

        <Button Grid.Row="4"
                Content="OK"
                Width="75"
                Height="25"
                HorizontalAlignment="Center"
                Click="OKButton_Click"
                Margin="0,0,0,0"/>
    </Grid>
</Window>
